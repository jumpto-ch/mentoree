<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='mentoree_subject_note_action' model='ir.actions.act_window'>
        <field name="name">Mentoree's subject note</field>
        <field name="res_model">mentoree.subject.note</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id='mentoree_subject_note_template_action' model='ir.actions.act_window'>
        <field name="name">Mentoree's subject note template</field>
        <field name="res_model">mentoree.subject.note.template</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="mentoree_subject_note_view_tree" model="ir.ui.view">
        <field name="name">Mentoree's subject note list</field>
        <field name="model">mentoree.subject.note</field>
        <field name="arch" type="xml">
            <tree>
                <field name="valid_goal"/>
                <field name="author_id"/>
                <field name="note"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="mentoree_subject_note_view_form" model="ir.ui.view">
        <field name="name">Mentoree's subject note form</field>
        <field name="model">mentoree.subject.note</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="valid_goal"/>
                        <field name="author_id"/>
                        <field name="note"/>
                        <field name="date"/>
                        <field name="mentoree_subject_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mentoree_subject_note_template_view_tree" model="ir.ui.view">
        <field name="name">Mentoree's subject note template list</field>
        <field name="model">mentoree.subject.note.template</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>

