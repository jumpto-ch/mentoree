<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='action_all_student' model='ir.actions.act_window'>
        <field name="name">All Student</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_student', '=', True)]</field>
        <field name="context">{'default_is_student': True}</field>
        <field name="limit">30</field>
        <field name="target">current</field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="type_person" position="before">
                <filter string="Mentoree" name="is_mentoree_filter" domain="[('is_mentoree', '=', True)]"/>
                <separator/>
            </filter>
        </field>
    </record>
</odoo>
