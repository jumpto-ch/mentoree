<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mentoree_subject_edit_wizard_form" model="ir.ui.view">
        <field name="name">Mentoree's subject edition wizard</field>
        <field name="model">mentoree.subject.edit.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="mentoree_ids"/>
                    </group>
                    <group>
                        <field name="formation_subject_ids"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Validate' type='object'
                            name='validate_mentoree_subject_edition'
                            class='btn-primary'/>
                    <button string='Cancel' class='btn-default' special='cancel'/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
