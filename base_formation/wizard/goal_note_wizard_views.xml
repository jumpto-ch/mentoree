<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="goal_note_wizard_view_form" model="ir.ui.view">
        <field name="name">Goal note wizard</field>
        <field name="model">goal.note.wizard</field>
        <field name="arch" type="xml">
            <form string="Add new note">
                <sheet>
                    <group>
                        <field name="note_template" options="{'no_create': True}"/>
                        <field name="note"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Add' type='object'
                            name='add_note'
                            class='btn-primary'/>
                    <button string='Add and valid' type='object'
                            name='valid_goal'
                            class='btn-primary'/>
                    <button string='Cancel' class='btn-default' special='cancel'/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

